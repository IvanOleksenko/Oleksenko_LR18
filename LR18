<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Моя Перша Гра</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        #game-board {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            grid-gap: 10px;
            width: 300px;
            margin: 20px auto;
        }

        #game-board div {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 20px;
            font-size: 18px;
            cursor: pointer;
        }

        #timer {
            font-size: 24px;
            margin-top: 20px;
        }

        #statistics {
            text-align: left;
            margin: 20px auto;
            width: 300px;
        }

        #stats-list li.green { color: green; }
        #stats-list li.red { color: red; }
        #stats-list li.yellow { color: yellow; }
    </style>
</head>
<body>
    <div id="welcome-screen">
        <h1>Моя Перша Гра</h1>
        <button id="start-game">Почати гру</button>
    </div>

    <div id="game-screen" style="display: none;">
        <div id="timer">Час: 60</div>
        <div id="game-board"></div>
        <button id="restart-game">Почати спочатку</button>
    </div>

    <div id="result-screen" style="display: none;">
        <h2>Вітаємо! Ви завершили гру.</h2>
        <button id="play-again">Грати знову</button>
        <div id="statistics">
            <h3>Статистика:</h3>
            <ul id="stats-list"></ul>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            let timer;
            let timeLeft = 60;
            let currentNumber = 1;
            let attempts = [];
            let startTime;

            $("#start-game").click(function() {
                $("#welcome-screen").hide();
                startGame();
            });

            $("#restart-game").click(function() {
                resetGame();
            });

            $("#play-again").click(function() {
                $("#result-screen").hide();
                resetGame();
            });

            function startGame() {
                $("#game-screen").show();
                startTime = new Date();
                timeLeft = 60;
                currentNumber = 1;
                $("#timer").text(`Час: ${timeLeft}`);
                generateBoard();
                startTimer();
            }

            function resetGame() {
                $("#game-board").empty();
                startGame();
            }

            function startTimer() {
                timer = setInterval(function() {
                    timeLeft--;
                    $("#timer").text(`Час: ${timeLeft}`);
                    if (timeLeft <= 0) {
                        endGame();
                    }
                }, 1000);
            }

            function generateBoard() {
                let numbers = Array.from({length: 25}, (_, i) => i + 1);
                numbers.sort(() => Math.random() - 0.5);

                for (let i = 0; i < numbers.length; i++) {
                    let size = Math.floor(Math.random() * 10) + 15;
                    let color = '#' + Math.floor(Math.random()*16777215).toString(16);
                    let div = $(`<div style="font-size:${size}px; color:${color};">${numbers[i]}</div>`);
                    div.click(function() {
                        if (parseInt($(this).text()) === currentNumber) {
                            $(this).css("visibility", "hidden");
                            currentNumber++;
                            if (currentNumber > 25) {
                                endGame();
                            }
                        } else {
                            alert("Невірна цифра");
                        }
                    });
                    $("#game-board").append(div);
                }
            }

            function endGame() {
                clearInterval(timer);
                let endTime = new Date();
                let timeTaken = Math.floor((endTime - startTime) / 1000);
                attempts.push(timeTaken);
                showResults();
            }

            function showResults() {
                $("#game-screen").hide();
                $("#result-screen").show();
                let bestTime = Math.min(...attempts);
                let worstTime = Math.max(...attempts);

                $("#stats-list").empty();
                attempts.forEach((time, index) => {
                    let colorClass = time === bestTime ? "green" : (time === worstTime ? "red" : "yellow");
                    $("#stats-list").append(`<li class="${colorClass}">Гра ${index + 1}: ${time} секунд</li>`);
                });
            }
        });
    </script>
</body>
</html>
